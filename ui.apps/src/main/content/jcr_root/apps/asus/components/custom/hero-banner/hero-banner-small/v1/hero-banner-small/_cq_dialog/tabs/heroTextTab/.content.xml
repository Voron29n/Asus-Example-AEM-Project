<heroTextTab xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
             xmlns:jcr="http://www.jcp.org/jcr/1.0"
             xmlns:nt="http://www.jcp.org/jcr/nt/1.0"

             jcr:primaryType="nt:unstructured"
             jcr:title="Hero Text property"
             margin="{Boolean}true"
             sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">
        <column
                jcr:primaryType="nt:unstructured"
                margin="{Boolean}true"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">
                <column jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">

                    <items jcr:primaryType="nt:unstructured">

                        <actionslink jcr:primaryType="nt:unstructured"
                                     jcr:title="Link and Actions"
                                     margin="{Boolean}true"
                                     sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                        jcr:primaryType="nt:unstructured"
                                        margin="{Boolean}true"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                    <items jcr:primaryType="nt:unstructured">
                                        <column jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">
                                                <heroTitle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldLabel="Title for a hero banner small component"
                                                        name="./heroTitle"/>
                                                <heroDescription
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldLabel="Description for a hero banner small component"
                                                        name="./heroDescription"/>
                                            </items>
                                        </column>
                                    </items>
                                </column>
                            </items>
                        </actionslink>

                    </items>
                </column>
            </items>
        </column>
    </items>
</heroTextTab>
