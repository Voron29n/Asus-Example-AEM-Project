<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Grid Desctope - 3 tabs / Mobile - 4 tabs"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">

            <tabs jcr:primaryType="nt:unstructured"
                  maximized="{Boolean}true"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <select
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Type of showing grids for desctope and mobile version"
                            name="./parsysType">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <normal jcr:primaryType="nt:unstructured"
                                          text="Desctope 3 tabs 3col. 1 row / Mobile version 4 tabs 2 col. 2 row"
                                          value="NORMAL"/>
                            <simplified jcr:primaryType="nt:unstructured"
                                          text="Desctope 3 tabs 3col. 1 row / Mobile version 4 tabs 2 col. 1 row"
                                          value="SIMPLIFIED"/>
                        </items>
                    </select>
                </items>
            </tabs>
        </items>
    </content>

</jcr:root>
