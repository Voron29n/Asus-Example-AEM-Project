<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Hero Banner Middle"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[asus.components.hero.banner.middle.v1.dialog]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">

            <tabs jcr:primaryType="nt:unstructured"
                  maximized="{Boolean}true"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">

                    <asset jcr:primaryType="nt:unstructured"
                           jcr:title="Image"
                           sling:hideResource="{Boolean}false"/>

                    <metadata jcr:primaryType="nt:unstructured"
                              jcr:title="Metadata"
                              sling:hideResource="{Boolean}true"/>

                    <actionslink jcr:primaryType="nt:unstructured"
                                 jcr:title="Link and Actions"
                                 margin="{Boolean}true"
                                 sling:resourceType="granite/ui/components/coral/foundation/container">

                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    margin="{Boolean}true"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">

                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            granite:class="cq-dialog-container-link-info">

                                        <items jcr:primaryType="nt:unstructured">

                                            <typeLink
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Button press to external url"
                                                    name="./typeLink"
                                                    value="true"
                                                    uncheckedValue="false">
                                            </typeLink>

                                            <linkTo
                                                    jcr:primaryType="nt:unstructured"
                                                    fieldLabel="Link to Url or Site Page"
                                                    name="./linkTo"
                                                    rootPath="/content/asus"
                                                    suffix=".html"
                                                    sling:resourceType="cq/gui/components/coral/common/form/pagefield/"/>

                                            <linkUrlTarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                    fieldDescription="check - new tab / uncheck - salf tab"
                                                    name="./linkUrlTarget"
                                                    value="_blank"
                                                    uncheckedValue="_self"
                                                    checked="{Boolean}true"/>

                                        </items>
                                    </column>
                                </items>
                            </column>
                        </items>
                    </actionslink>

                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
