<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Hero Banner Middle"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[asus.components.hero.banner.middle.v1.dialog]">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">

            <tabs jcr:primaryType="nt:unstructured"
                  maximized="{Boolean}true"
                  sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">

                    <tab1 jcr:primaryType="nt:unstructured"
                          jcr:title="Hero Image"
                          margin="{Boolean}true"
                          sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    margin="{Boolean}true"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">

                                        <items jcr:primaryType="nt:unstructured">

                                            <image
                                                    granite:class="cmp-navigation__editor-social__image"
                                                    jcr:primaryType="nt:unstructured"
                                                    jcr:title="Image"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    margin="{Boolean}true">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <columns
                                                            granite:class="cmp-navigation__editor-social__image_block"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                            margin="{Boolean}true">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <file
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                            allowUpload="{Boolean}false"
                                                                            autoStart="{Boolean}false"
                                                                            class="cq-droptarget"
                                                                            fieldLabel="Image Asset"
                                                                            fileNameParameter="./fileName"
                                                                            fileReferenceParameter="./fileReference"
                                                                            mimeTypes="[image/gif,image/jpeg,image/png,image/tiff]"
                                                                            multiple="{Boolean}false"
                                                                            name="./file"
                                                                            title="Upload Image Asset"
                                                                            uploadUrl="${suffix.path}"
                                                                            useHTML5="{Boolean}true"/>
                                                                </items>
                                                            </column>
                                                        </items>
                                                    </columns>
                                                </items>
                                            </image>
                                        </items>
                                    </column>
                                </items>
                            </column>
                        </items>
                    </tab1>

                    <tab2 jcr:primaryType="nt:unstructured"
                          jcr:title="Hero Link property"
                          margin="{Boolean}true"
                          sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                    jcr:primaryType="nt:unstructured"
                                    margin="{Boolean}true"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">

                                        <items jcr:primaryType="nt:unstructured">

                                            <actionslink jcr:primaryType="nt:unstructured"
                                                         jcr:title="Link and Actions"
                                                         margin="{Boolean}true"
                                                         sling:resourceType="granite/ui/components/coral/foundation/container">

                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                            jcr:primaryType="nt:unstructured"
                                                            margin="{Boolean}true"
                                                            sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">

                                                        <items jcr:primaryType="nt:unstructured">
                                                            <column jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                    granite:class="cq-dialog-container-link-info">

                                                                <items jcr:primaryType="nt:unstructured">

                                                                    <typeLink
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                            fieldDescription="Button press to external url"
                                                                            name="./isExternalLink"
                                                                            value="{Boolean}true"
                                                                            text="Button press to external url"
                                                                            uncheckedValue="false">
                                                                    </typeLink>

                                                                <wellGroup
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                                        granite:class="cq-dialog-container-link-info-well">
                                                                <items jcr:primaryType="nt:unstructured">

                                                                    <linkTo
                                                                            jcr:primaryType="nt:unstructured"
                                                                            fieldLabel="Link to Url or Site Page"
                                                                            name="./linkTo"
                                                                            rootPath="/content/asus"
                                                                            suffix=".html"
                                                                            sling:resourceType="cq/gui/components/coral/common/form/pagefield/"
                                                                            granite:class="cq-dialog-container-link-info-well-linkTo"/>

                                                                    <linkUrlTarget
                                                                            jcr:primaryType="nt:unstructured"
                                                                            sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                                            fieldDescription="check - new tab / uncheck - self tab"
                                                                            name="./linkUrlTarget"
                                                                            value="_blank"
                                                                            uncheckedValue="_self"
                                                                            checked="{Boolean}true"
                                                                            granite:class="cq-dialog-container-link-info-well-linkUrlTarget"/>
                                                                </items>
                                                                </wellGroup>

                                                                </items>
                                                            </column>
                                                        </items>
                                                    </column>
                                                </items>
                                            </actionslink>

                                        </items>
                                    </column>
                                </items>
                            </column>
                        </items>
                    </tab2>

                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
