<link xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"

          jcr:primaryType="nt:unstructured"
          jcr:title="Link property"
          margin="{Boolean}true"
          sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">

        <column
                jcr:primaryType="nt:unstructured"
                margin="{Boolean}true"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">

                <column jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">


                        <actionslink jcr:primaryType="nt:unstructured"
                                     jcr:title="Link property"
                                     margin="{Boolean}true"
                                     sling:resourceType="granite/ui/components/coral/foundation/container">
                            <items jcr:primaryType="nt:unstructured">

                                <column
                                        jcr:primaryType="nt:unstructured"
                                        margin="{Boolean}true"
                                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                    <items jcr:primaryType="nt:unstructured">

                                        <column jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                            <items jcr:primaryType="nt:unstructured">

                                                <descriptionLink
                                                        jcr:primaryType="nt:unstructured"
                                                        fieldDescription="DescriptionLink"
                                                        fieldLabel="DescriptionLink"
                                                        required="{Boolean}false"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        name="./descriptionLink"
                                                        granite:class="cq-dialog-container-link-descriptionLink"/>

                                                <typeLink
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Button press to external url"
                                                        name="./isExternalLink"
                                                        value="{Boolean}true"
                                                        text="Button press to external url"
                                                        uncheckedValue="{Boolean}false"/>

                                                <wellGroup
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        granite:class="cq-dialog-container-link-info-well">
                                                    <items jcr:primaryType="nt:unstructured">

                                                        <linkTo
                                                                jcr:primaryType="nt:unstructured"
                                                                fieldLabel="Link to Url or Site Page"
                                                                name="./linkTo"
                                                                rootPath="/content/asus"
                                                                suffix=".html"
                                                                sling:resourceType="cq/gui/components/coral/common/form/pagefield/"
                                                                granite:class="cq-dialog-container-link-info-well-linkTo"/>

                                                        <linkUrlTarget
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                                fieldDescription="check - new tab / uncheck - self tab"
                                                                name="./linkUrlTarget"
                                                                value="_blank"
                                                                uncheckedValue="_self"
                                                                checked="{Boolean}true"
                                                                default="_self"
                                                                granite:class="cq-dialog-container-link-info-well-linkUrlTarget"/>
                                                    </items>
                                                </wellGroup>

                                            </items>
                                        </column>
                                    </items>
                                </column>
                            </items>
                        </actionslink>

                    </items>
                </column>
            </items>
        </column>
    </items>
</link>
