<productMenuTab xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
                xmlns:jcr="http://www.jcp.org/jcr/1.0"
                xmlns:nt="http://www.jcp.org/jcr/nt/1.0"

                jcr:primaryType="nt:unstructured"
                jcr:title="Product Menu Data"
                margin="{Boolean}true"
                sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">

        <column
                jcr:primaryType="nt:unstructured"
                margin="{Boolean}true"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">

                <column jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">
                        <productMenuData
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                granite:class="cq-dialog-container-product_line_list-link-group product-menu-tab">
                            <items jcr:primaryType="nt:unstructured">
                                <icons
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/hyperlink"
                                        text="Please, check this link to select icon, then enter the icon class at textfield"
                                        href="https://fontawesome.com/icons"
                                        rel="details"
                                        target="_blank"/>
                                <productIconDataGroup
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                        granite:class="cq-dialog-container-product_line_list-icon-group product-icon-data-group">
                                    <items jcr:primaryType="nt:unstructured">
                                        <icon-class
                                                validation="icon-class-field"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Icon for menu"
                                                emptyText="Icon class name..."
                                                required="{Boolean}true"
                                                name="./iconClass"/>
                                        <icon-color
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Icon color for menu"
                                                emptyText="Icon color..."
                                                required="{Boolean}true"
                                                name="./iconColor"/>
                                    </items>
                                </productIconDataGroup>
                                <productTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        emptyText="Menu Title"
                                        required="{Boolean}true"
                                        name="./menuTitle"/>
                            </items>
                        </productMenuData>

                        <productLinkDataGroup
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                granite:class="cq-dialog-container-product_line_list-link-group product-link-data-group">
                            <items jcr:primaryType="nt:unstructured">

                                <linkTo
                                        jcr:primaryType="nt:unstructured"
                                        emptyText="Link to Url"
                                        name="./linkTo"
                                        rootPath="/content/asus"
                                        suffix=".html"
                                        sling:resourceType="cq/gui/components/coral/common/form/pagefield/"/>

                                <productLinkDataSwitchGroup
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                        granite:class="cq-dialog-container-product_line_list-link-group product-link-data-switch-group">
                                    <items jcr:primaryType="nt:unstructured">

                                        <typeLink
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                fieldDescription="check - external link / uncheck - self link"
                                                name="./externalLink"
                                                value="{Boolean}true"
                                                default="{Boolean}true"
                                                uncheckedValue="{Boolean}false"/>
                                        <linkUrlTarget
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                fieldDescription="check - new tab / uncheck - self tab"
                                                name="./linkUrlTarget"
                                                value="_blank"
                                                uncheckedValue="_self"
                                                default="_blank"
                                                checked="{Boolean}true"/>
                                    </items>
                                </productLinkDataSwitchGroup>
                            </items>
                        </productLinkDataGroup>

                    </items>
                </column>
            </items>
        </column>
    </items>
</productMenuTab>