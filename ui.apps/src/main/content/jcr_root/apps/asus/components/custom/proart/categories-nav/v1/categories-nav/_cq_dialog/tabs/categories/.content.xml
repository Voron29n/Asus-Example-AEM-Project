<categories xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
              xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
              xmlns:nt="http://www.jcp.org/jcr/nt/1.0"

              jcr:primaryType="nt:unstructured"
              jcr:title="Categories"
              margin="{Boolean}true"
              sling:resourceType="granite/ui/components/coral/foundation/container">
    <items jcr:primaryType="nt:unstructured">

        <column
                jcr:primaryType="nt:unstructured"
                margin="{Boolean}true"
                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
            <items jcr:primaryType="nt:unstructured">

                <column jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                    <items jcr:primaryType="nt:unstructured">

                        <multiProducts
                                cq:showOnCreate="{Boolean}true"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                validation="multifield-max-10"
                                fieldDescription="New value"
                                fieldLabel="Categories nav collection"
                                granite:class="foundation-toggleable cq-dialog-container__editor-multifield-categories_nav_group">
                            <field
                                    jcr:primaryType="nt:unstructured"
                                    acs-commons-nested=""
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./categories"
                                    granite:class="cq-dialog-container__editor-categories_nav_group">
                                <items jcr:primaryType="nt:unstructured">

                                    <imageDesktop
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Image desktop"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            margin="{Boolean}true"
                                            granite:class="cq-dialog-container__editor-categories_nav__image">
                                        <items jcr:primaryType="nt:unstructured">
                                            <columns
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                    margin="{Boolean}true"
                                                    granite:class="cq-dialog-container__editor-categories_nav__image_block">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <fileDesktop
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                    allowUpload="{Boolean}false"
                                                                    autoStart="{Boolean}false"
                                                                    class="cq-droptarget"
                                                                    fieldLabel="Image desktop Asset"
                                                                    fileNameParameter="./fileNameDesktop"
                                                                    fileReferenceParameter="./fileReferenceDesktop"
                                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff]"
                                                                    multiple="{Boolean}false"
                                                                    name="./fileDesktop"
                                                                    title="Upload Image Asset"
                                                                    uploadUrl="${suffix.path}"
                                                                    requestSuffix="/desktop.img.png"
                                                                    useHTML5="{Boolean}true"/>
                                                        </items>
                                                    </column>
                                                </items>
                                            </columns>
                                        </items>
                                    </imageDesktop>
                                    <imageMobile
                                            jcr:primaryType="nt:unstructured"
                                            jcr:title="Image mobile"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            margin="{Boolean}true"
                                            granite:class="cq-dialog-container__editor-categories_nav__image">
                                        <items jcr:primaryType="nt:unstructured">
                                            <columns
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                                    margin="{Boolean}true"
                                                    granite:class="cq-dialog-container__editor-categories_nav__image_block">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <fileMobile
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                    allowUpload="{Boolean}false"
                                                                    autoStart="{Boolean}false"
                                                                    class="cq-droptarget"
                                                                    fieldLabel="Image mobile Asset"
                                                                    fileNameParameter="./fileNameMobile"
                                                                    fileReferenceParameter="./fileReferenceMobile"
                                                                    mimeTypes="[image/gif,image/jpeg,image/png,image/tiff]"
                                                                    multiple="{Boolean}false"
                                                                    name="./fileMobile"
                                                                    title="Upload Image Asset"
                                                                    requestSuffix="/mobile.img.png"
                                                                    uploadUrl="${suffix.path}"
                                                                    useHTML5="{Boolean}true"/>
                                                        </items>
                                                    </column>
                                                </items>
                                            </columns>
                                        </items>
                                    </imageMobile>

                                    <title
                                            jcr:primaryType="nt:unstructured"
                                            fieldDescription="Category title"
                                            emptyText="Category title"
                                            required="{Boolean}true"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            name="./title"
                                            granite:class="cq-dialog-container-categories_nav-title"
                                    />

                                    <wellGroup
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/well"
                                            granite:class="cq-dialog-container-categories_nav-group-well">
                                        <items jcr:primaryType="nt:unstructured">


                                            <linkTo
                                                    jcr:primaryType="nt:unstructured"
                                                    emptyText="Link to Url"
                                                    name="./linkTo"
                                                    rootPath="/content/asus"
                                                    suffix=".html"
                                                    sling:resourceType="cq/gui/components/coral/common/form/pagefield/"
                                                    granite:class="cq-dialog-container-categories_nav-info-well-linkTo"/>

                                            <linkUrlTarget
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/switch"
                                                    fieldDescription="check - new tab / uncheck - self tab"
                                                    name="./linkUrlTarget"
                                                    value="_blank"
                                                    uncheckedValue="_self"
                                                    default="_blank"
                                                    checked="{Boolean}true"
                                                    granite:class="cq-dialog-container-categories_nav-link-info-well-linkUrlTarget"/>

                                        </items>
                                    </wellGroup>

                                </items>

                            </field>
                        </multiProducts>
                    </items>
                </column>
            </items>
        </column>
    </items>
</categories>